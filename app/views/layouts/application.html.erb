<!DOCTYPE html>
<html>
  <head>
    <title>LittleShop</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="yield" id="nav">
      <div id="hello-message">
        <% if current_user %>
          <p>Logged in as <%= current_user.name %></p>
        <% end %>
      <div id="cart-identity-nav">
        <ul>
          <% if current_default? || !(current_user) %>
            <li><%= link_to "Cart: #{@cart.cart_count}", cart_path %></li>
          <% end %>
          <% if current_user %>
            <li><%= link_to "Log Out", logout_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "Register", registration_path %></li>
            <li><%= link_to "Log In", login_path %></li>
          <% end %>
          <% if current_default? %>
            <li><%= link_to "Profile", profile_path %></li>
          <% end %>
        </ul>
      </div>
      <div id="user-functions">
        <ul>
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Items", items_path %></li>
          <li><%= link_to "Merchants", merchants_path %></li>
          <% if current_user %>
            <li><%= link_to "Orders", profile_orders_path %></li>
          <% end %>
          <% if current_merchant? %>
            <li><%= link_to "Dashboard", dashboard_path %></li>
          <% elsif current_admin? %>
            <li><%= link_to "All Users", admin_users_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <% if flash.any? %>
      <% flash.each do |key, value| %>
        <%= value %>
      <% end %>
    <% end %>
    <%= yield %>
  </body>
</html>
