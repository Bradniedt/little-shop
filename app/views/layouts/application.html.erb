<!DOCTYPE html>
<html>
  <head>
    <title>LittleShop</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="yield" id="nav">
      <ul>
        <% if current_user %>
          <% if current_user.default?  %>
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "Items", items_path %></li>
            <li><%= link_to "Merchants", merchants_path %></li>
            <li><%= link_to "Cart", cart_path %></li>
            <li>Total Items in Cart: <%= 0 %></li>
            <li><%= link_to "Profile", profile_path %></li>
            <li><%= link_to "Orders", profile_orders_path %></li>
            <li><%= link_to "Log Out", logout_path, method: :delete %></li>
            <li>Logged in as <%= current_user.name %></li>
          <% elsif current_user.merchant? %>
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "Items", items_path %></li>
            <li><%= link_to "Merchants", merchants_path %></li>
            <li><%= link_to "Dashboard", dashboard_path %></li>
            <li><%= link_to "Log Out", logout_path, method: :delete %></li>
          <% elsif current_admin? %>
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "All Users", admin_users_path %></li>
            <li><%= link_to "Items", items_path %></li>
            <li><%= link_to "Merchants", merchants_path %></li>
            <li><%= link_to "Profile", profile_path %></li>
            <li><%= link_to "Orders", profile_orders_path %></li>
            <li><%= link_to "Log Out", logout_path, method: :delete %></li>
            <% end %>
        <% else %>
          <li><%= link_to "Register", registration_path %></li>
          <li><%= link_to "Log In", login_path %></li>
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Items", items_path %></li>
          <li><%= link_to "Merchants", merchants_path %></li>
          <li><%= link_to "Cart", cart_path %></li>
          <li>Total Items in Cart: <%= 0 %></li>
        <% end %>
      </ul>
    </div>
    <%= yield %>
  </body>
</html>
