<h1>Merchant <%= @merchant.name %>'s Items</h1>
<h3>Item Statistics:</h3>
<ul id="top-five-items">
  <% @top_five_items.each do |item| %>
  <li><%= item.name %></li>
  <% end %>
</ul>
<ul id="bottom-five-items">
  <% @bottom_five_items.each do |item| %>
  <li><%= item.name %></li>
  <% end %>
</ul>

<%= link_to 'Add New Item', new_admin_merchant_item_path(@merchant) %>

<% @items.each do |item| %>
  <div id="item-<%= item.id %>" class="flex-items">
    <p>Item  #<%= item.id %></p>
    <h3><%= link_to item.name, item_path(item) %></h3>
    <p><%= link_to(item_path(item), id: "item-#{item.id}-img") do %>
        <%= image_tag(item.image_link, class:"thumbnails") %>
      <% end %>
    </p>
    <p>Sold By: <%= item.user.name %></p>
    <p><%= item.description %></p>
    <p>In Stock: <%= item.inventory %></p>
    <p>Price: <%= number_to_currency(item.current_price / 100.0) %></p>

    <%= link_to 'Edit this item', edit_admin_merchant_item_path(@merchant, item) %>
    <% if item.order_items.empty? %>
      <%= link_to 'Delete this item', admin_merchant_item_path(@merchant, item), method: :delete %>
    <% end %>
    <% if item.enabled %>
      <p>This item is enabled.</p>
      <%= link_to 'Disable this item', admin_merchant_item_path(@merchant, item), method: :put %>
    <% else %>
      <p>This item is disabled.</p>
      <%= link_to 'Enable this item', admin_merchant_item_path(@merchant, item), method: :put %>
    <% end %>
  </div>
<% end  %>
