
<div class="flex-container">
  <div class="flex-items">
    <% @users.each do |user| %>
      <div class="item user-item" id="user-links-<%=user.id%>">
        <ul class="user-list">
          <li><%= image_tag('screetch.jpg', class:"zach") %></li>
          <li><%= link_to user.name, admin_user_path(user) %></li>
          <li>Created on: <%= user.created_at.strftime('%B %d, %Y') %></li>
          <% if user.enabled %>
            <%= link_to 'disable', admin_user_enable_path(user.id), method: :patch %>
          <% else %>
            <%= link_to 'enable', admin_user_enable_path(user.id), method: :patch %>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>
