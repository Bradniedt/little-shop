<div class="stats" id="statistics">
  <div class="stat-item">Top Merchants by Quantity:
    <% @top_merchants_by_quantity.each do |merchant| %>
    <ul>
      <li><%= merchant.name %></li>
    </ul>
    <% end %>
  </div>
  <div class="stat-item">Top Merchants by Price:
    <% @top_merchants_by_price.each do |merchant| %>
    <ul>
      <li><%= merchant.name %></li>
    </ul>
    <% end %>
  </div>
  <div class="stat-item">Merchants with Fastest Fulfillment Times:
    <% @top_merchants_by_time.each do |merchant| %>
    <ul>
      <li><%= merchant.name %></li>
    </ul>
    <% end %>
  </div>
  <div class="stat-item">Merchants with Slowest Fulfillment Times:
    <% @bottom_merchants_by_time.each do |merchant| %>
    <ul>
      <li><%= merchant.name %></li>
    </ul>
    <% end %>
  </div>
  <div class="stat-item">Top 3 States with Most Orders:
    <% @top_states.each do |state| %>
    <ul>
      <li><%= state %></li>
    </ul>
    <% end %>
  </div>
  <div class="stat-item">Top 3 Cities with Most Orders:
    <% @top_cities.each do |city, state| %>
    <ul>
      <li><%= city %>, <%= state %></li>
    </ul>
    <% end %>
  </div>
  <div class="stat-item">Biggest Orders by Quantity of Items:
    <% @biggest_orders.each do |order| %>
    <ul>
      <li>Order #<%= order.id %></li>
    </ul>
    <% end %>
  </div>
</div>

<div class="flex-container">
  <div class="flex-items">
    <% @merchants.each do |merchant| %>
     <div class="item" id="merchant-<%= merchant.id %>">
       <ul>
          <li><%= merchant.name %></li>
          <li><%= merchant.city %></li>
          <li><%= merchant.state %></li>
          <li><%= merchant.created_at %></li>
            <% if current_admin? %>
            <%= link_to("#{merchant.name}", admin_merchant_path(merchant.id)) %>
              <% if merchant.enabled %>
               <%= link_to "Disable", admin_merchant_enable_path(merchant.id), method: :patch %>
              <% else  %>
              <%= link_to "Enable", admin_merchant_enable_path(merchant.id), method: :patch %>
              <% end %>
            <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>
